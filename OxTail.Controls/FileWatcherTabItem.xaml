<local:CloseableTabItem x:Class="OxTail.Controls.FileWatcherTabItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OxTail.Controls" 
             Loaded="CloseableTabItem_Loaded"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="gridContent">
      <local:FileWatcher x:Name="fileWatcher" FileChanged="fileWatcher_FileChanged"/>
    </Grid>
</local:CloseableTabItem>
