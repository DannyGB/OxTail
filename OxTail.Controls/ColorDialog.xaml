<Window x:Class="OxTail.Controls.ColorDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:OxTail.Controls"
    Icon="Images/ColorSwatchSquare.png"
    Title="{DynamicResource colourPickerWindowTitle}" Height="410" 
    KeyDown="Window_KeyDown"
    Width="520" WindowStartupLocation="CenterOwner">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        
        
        <local:ColorPicker x:Name="colorPicker"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Right" Orientation="Horizontal" Margin="5" >
            <Button x:Name="btnOk" Content="{DynamicResource okButton}" Click="btnOk_Click" Width="60" Height="25" Margin="10,0,0,0" />
            <Button x:Name="btnCancel" Content="{DynamicResource cancelButton}" Click="btnCancel_Click" Height="25" Width="60" Margin="10,0,10,0" />
        </StackPanel>
    </Grid>
    
        
</Window>
