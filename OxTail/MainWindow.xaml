<Window x:Class="OxTail.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="OxTail" Height="808" Width="1022" WindowStartupLocation="CenterScreen">
    <DockPanel Name="dockPanelMain" LastChildFill="True">
        <Menu Name="menu1" DockPanel.Dock="Top" >
            <MenuItem  Header="File">
                <MenuItem Name="MenuOpen" Header="Open" Click="MenuOpen_Click" />
                <MenuItem Name="MenuExit" Header="Exit" Click="MenuExitClick" />
            </MenuItem>
            <MenuItem  Header="Help">
                      <MenuItem Name="MenuAbout"  Header="About" Click="MenuAboutClick" />
            </MenuItem>            
        </Menu>
        <TabControl Name="tabControlMain">
            <TabItem Name="tabItemMain" Header="Main">
                <RichTextBox Name="richTextBoxLogDetail" IsReadOnly="True" />
            </TabItem>
        </TabControl>        
    </DockPanel>
</Window>
